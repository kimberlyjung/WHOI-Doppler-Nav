//----------------------------------------------
Behavior=BHV_Waypoint
{
  name       = waypt_return
  pwt        = 100
  condition  = RETURN = true
  condition  = DEPLOY = true
  perpetual  = true
  updates    = RETURN_UPDATE
  endflag    = RETURN = false
  endflag    = DEPLOY = false
  endflag    = MISSION = complete
	
           speed = 2.0
  capture_radius = 2.0
     slip_radius = 8.0
          points = 0,0
 }

//----------------------------------------------
Behavior=BHV_ConstantDepth
{
   name       = depth_loiter_west
   pwt        = 100
   condition  = LOITER_REGION = west
   condition    = DEPLOY = true       // example
   condition    = RETURN = false
   updates      = CONST_DEP_UPDATES_WEST       // example
   
               basewidth = 100          // default
                depth = 30           
   depth_mismatch_var = DEPTH_DIFF   // example
             duration = 150            // default
             duration_idle_decay = false
             perpetual = true
            peakwidth = 3            // default
          summitdelta = 50           // default
 }

//----------------------------------------------
Behavior=BHV_ConstantDepth
{
   name       = depth_loiter_east
   pwt        = 100
   condition  = LOITER_REGION = east
   condition    = DEPLOY = true       // example
   condition    = RETURN = false
   updates      = CONST_DEP_UPDATES_EAST       // example
   
               basewidth = 100          // default
                depth = 10           
   depth_mismatch_var = DEPTH_DIFF   // example
             duration = 150            // default
             duration_idle_decay = false
             perpetual = true
            peakwidth = 3            // default
          summitdelta = 50           // default
 }

//----------------------------------------------
Behavior=BHV_ConstantSpeed
{
  name       = const_speed
  pwt        = 200
  condition  = SPD=true
  condition  = DEPLOY = true
  perpetual  = true
  updates    = SPEED_UPDATE
  endflag    = SPD = false

     speed = 0.5
     duration = 10
 duration_reset = CONST_SPD_RESET=true
	
}

//----------------------------------------------
Behavior = BHV_PeriodicSurface
 {
   name         = bravo_periodic_surface   // example
   pwt          = 100                // default
   condition  = RETURN = true
   condition  = DEPLOY = true
   condition  = NEED_TO_SURFACE=true 
   perpetual  = true
   duration   = 60
   updates      = PSURFACE_UPDATES   // example
   endflag    = NEED_TO_SURFACE=false

   // Parameters specific to this behavior
   // ------------------------------------
   acomms_mark_variable = ACOMMS_RECEIVED       // example
           ascent_grade = linear                // default
           ascent_speed = -3                    // default
   atsurface_status_var = TIME_AT_SURFACE       // default
          mark_variable = GPS_UPDATE_RECEIVED   // default
    max_time_at_surface = 60                   // default
     pending_status_var = PENDING_SURFACE       // default
                 period = TIME_AT_SURFACE       // default
       zero_speed_depth = 0                     // default
 }

//----------------------------------------------
Behavior = BHV_Timer
 {
   // General Behavior Parameters
   // ---------------------------
   name         = bravo_bhv_below_timer            // default
   condition    = NEED_TO_SURFACE=false    // example
   duration     = 200                  // example
   idleflag     = WAITING=false        // example
   runflag      = WAITING=true         // example
   runflag      = WAITED=false         // example
   endflag      = NEED_TO_SURFACE=true          // example
   updates      = TIMER_UPDATES        // example

   // Parameters specific to this behavior
   // ------------------------------------
   // None
 }

